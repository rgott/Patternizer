<Window x:Class="Patternizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patternizer"
        mc:Ignorable="d"
        AllowDrop="True"
        DragEnter="Window_DragEnter"
        Drop="Window_Drop"
        DragLeave="Window_DragLeave"
        Title="Image Patternizer" Height="502.525" Width="944.978">
    <TabControl>
        <!--<TabItem Header="Manual">
            
        </TabItem>-->
        <TabItem Header="From Image">
            <Grid Background="Gray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="679*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock Name="textBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Drag an image here."/>
                    <Image Name="UI_previewFromImage"/>
                </Grid>
                <Grid Background="White" HorizontalAlignment="Right" MinWidth="150px" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Margin="0,0,0,0" Grid.Row="0">
                        <!--TODO: make into module-->
                        <Slider x:Name="slider2" HorizontalAlignment="Left" Minimum="1" Maximum="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="148"/>
                        <Slider x:Name="slider" HorizontalAlignment="Left" Minimum="1" Maximum="50" Margin="10,50,0,0" VerticalAlignment="Top" Width="125"/>
                        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,35" >
                            <ComboBox x:Name="UI_ComboBox_ShapeSelection">
                                <ComboBoxItem IsSelected="True">Triangle</ComboBoxItem>
                                <ComboBoxItem>Square</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                        <Button x:Name="button" Content="Update Preview" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="105" Click="UI_Btn_UpdatePreview_Click" Margin="10"/>
                        <CheckBox x:Name="UI_CheckBox_AutoUpdate" Content="Auto Update" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
                    </Grid>
                    <Grid VerticalAlignment="Bottom" Margin="0,0,0,48" Grid.Row="1">
                        <GroupBox Header="Output Type" Height="54" VerticalAlignment="Top">
                            <WrapPanel>
                                <!--TODO: pad all radio buttons-->
                                <RadioButton x:Name="UI_RadioBtn_Image" Content="Image" IsChecked="True"/>
                                <RadioButton x:Name="UI_RadioBtn_Svg" Content="Svg"/>
                            </WrapPanel>
                        </GroupBox>
                        <Grid Margin="0,66,0,0" Height="59" VerticalAlignment="Top">
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label x:Name="label" Content="Path:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <TextBox x:Name="UI_txtBox_Path" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Grid.Column="1"/>
                            </Grid>

                            <Grid VerticalAlignment="Top" Margin="0,33,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="File Name:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <TextBox x:Name="UI_txtBox_FileName" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Grid.Column="1"/>
                            </Grid>
                        </Grid>
                        <Button x:Name="UI_Btn_Compute" Content="Compute" VerticalAlignment="Top" Width="75" Click="UI_Btn_Compute_Click" Margin="165,135,10,0"/>
                    </Grid>
                    <Grid VerticalAlignment="Bottom" Margin="10,0,10,10" Grid.Row="2" >
                        <Button x:Name="UI_Btn_Output" Content="Open With Default" HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Click="UI_Btn_Output_Click" Margin="117,0,0,0"/>
                        <Button x:Name="UI_Btn_OutputFolder" Content="Output Folder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Click="UI_Btn_OutputFolder_Click" Margin="0,0,0,0"/>
                    </Grid>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
