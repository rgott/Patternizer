<Window x:Class="Patternizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patternizer"
        mc:Ignorable="d"
        AllowDrop="True"
        DragEnter="Window_DragEnter"
        Drop="Window_Drop"
        DragLeave="Window_DragLeave"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock Name="textBlock" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Drag an image here."/>
        <Image Name="img" Margin="0,33,0,0"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Minimum="1" Maximum="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" ValueChanged="slider_ValueChanged"/>

    </Grid>
</Window>
